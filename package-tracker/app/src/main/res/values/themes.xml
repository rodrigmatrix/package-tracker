<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rastreio.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Rastreio.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Rastreio.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Rastreio.LargeComponent</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Rastreio.BottomSheet</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rastreio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rastreio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.Rastreio.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Rastreio.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Rastreio.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Rastreio.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">26dp</item>
        <item name="cornerSizeTopRight">26dp</item>
    </style>

    <style name="Theme.Rastreio.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Rastreio.BottomSheet</item>
    </style>


    <style name="Rastreio.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">@dimen/m3_sys_elevation_level2</item>
        <item name="itemActiveIndicatorStyle">@style/Rastreio.BottomNavigationView.ActiveIndicator</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceTitleSmall</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceTitleSmall</item>
        <item name="itemRippleColor">@color/colorPrimaryVariant</item>
        <item name="itemIconTint">@color/colorSurface</item>
        <item name="itemTextColor">@color/colorSurface</item>
        <item name="itemPaddingTop">@dimen/m3_bottom_nav_item_padding_top</item>
        <item name="itemPaddingBottom">@dimen/m3_bottom_nav_item_padding_bottom</item>
        <item name="android:minHeight">@dimen/m3_bottom_nav_min_height</item>
    </style>

    <style name="Rastreio.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.BottomNavigationView.ActiveIndicator</item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="ShapeAppearance.Material3.BottomNavigationView.ActiveIndicator" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

</resources>